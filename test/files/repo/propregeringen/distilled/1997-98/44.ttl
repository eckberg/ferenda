    dcterms:description """
            <div xml:lang="sv" xmlns="http://www.w3.org/1999/xhtml">
              <p>Paragrafen har justerats med anledning av att <a href="https://lagen.nu/sfs/0000:000" rel="dcterms:references">personuppgiftslagen</a> ersätter den nuvarande <a href="https://lagen.nu/sfs/1973:289" rel="dcterms:references">datalagen</a>.</p>
              <span id="sid146"/>
            </div>
          """^^rdf:XMLLiteral ;
